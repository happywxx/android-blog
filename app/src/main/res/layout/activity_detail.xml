<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.wxx.apostil.DetailActivity">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_view_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        card_view:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/content_detail"
                android:layout_below="@+id/date_detail"
                android:textSize="20sp"
                android:padding="5dp"
                android:textStyle="normal"
                android:text="Content"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/date_detail"
                android:textSize="16sp"
                android:padding="5dp"
                android:textStyle="italic"
                android:text="Date"
                android:layout_below="@+id/title_detail"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/title_detail"
                android:textSize="24sp"
                android:textStyle="bold"
                android:padding="5dp"
                android:text="Title" />

            <Button
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="@drawable/ic_edit"
                android:id="@+id/button_edit"
                android:layout_alignTop="@+id/title_detail"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/title_detail"
                android:layout_toEndOf="@+id/title_detail" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>


</RelativeLayout>
